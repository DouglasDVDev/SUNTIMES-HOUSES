<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemCasas"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/idImagenCasa"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:background="@drawable/logocuadjpg"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="fondoFoto"
        tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/idTituloCasa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.348"
            app:layout_constraintStart_toEndOf="@id/idImagenCasa"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpUsage"
            tools:text="TITULO" />

        <TextView
        android:id="@+id/idPrecioCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "2000 €"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/idTituloCasa"
        app:layout_constraintStart_toEndOf="@id/idImagenCasa"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/idHabitacionesCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "6 hab."
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/idPrecioCasa"
        app:layout_constraintStart_toEndOf="@id/idImagenCasa"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/idPersonasCasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text = "6 - 12 pers"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/idPrecioCasa"
        app:layout_constraintStart_toEndOf="@id/idHabitacionesCasa"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/idDescripcionCasa"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        tools:text = "Descripción completa de la casa"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="@id/idHabitacionesCasa"
        app:layout_constraintStart_toEndOf="@id/idImagenCasa"
        tools:ignore="SpUsage" />

        <ImageButton
            android:id="@+id/btnContacto"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@mipmap/contact"
            android:contentDescription="@mipmap/contact"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>