<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mensajeForgot"
    android:layout_margin="20dp"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
         android:layout_width="match_parent"
        android:id="@+id/mensajeBox"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/editextpersonalizado">

        <TextView
            android:id="@+id/forgotTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mensajeforgot"
            android:padding="10dp"
            android:text="Reestablecer Contraseña"
            android:textStyle="bold"
            android:textSize="20dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="HardcodedText,SpUsage"
            app:drawableStartCompat="@drawable/ic_baseline_lock_reset_24" />

        <TextView
            android:id="@+id/mailRecupContra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Introduce tu Correo Electrónico"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="@color/azul"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toBottomOf="@id/forgotTitulo"
            app:layout_constraintBottom_toTopOf="@id/idEditMailUsuario"
            tools:ignore="HardcodedText,SpUsage" />

        <EditText
            android:id="@+id/idEditMailUsuario"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="@color/azul"
            android:textSize="20dp"
            android:hint="ejemplo@correo.com"
            android:backgroundTint="@color/azul"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="30dp"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/forgotTitulo"
            tools:ignore="LabelFor,SpUsage,TextFields"
            android:autofillHints="yes" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="20dp"
            android:text="CANCELAR"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            app:cornerRadius ="10dp"
            app:layout_constraintTop_toBottomOf="@id/idEditMailUsuario"
            app:layout_constraintBottom_toBottomOf="@id/mensajeBox"
            app:layout_constraintStart_toEndOf="@id/btnAceptar"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="HardcodedText,SpUsage" />

        <Button
            android:id="@+id/btnAceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:text="ACEPTAR"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            app:cornerRadius ="10dp"
            app:layout_constraintTop_toBottomOf="@id/idEditMailUsuario"
            app:layout_constraintBottom_toBottomOf="@id/mensajeBox"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="HardcodedText,SpUsage" />




        
        
        

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>