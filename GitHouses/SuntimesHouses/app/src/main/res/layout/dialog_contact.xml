<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout
    android:id="@+id/idFondoContacto"
    android:layout_width="350dp"
    android:layout_height="180dp"
    android:layout_marginTop="100dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="100dp"
    android:background="@drawable/fondo_personalizado"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0">

    <TextView
            android:id="@+id/idTextWar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="16dp"
            android:text="Le atenderemos encantados"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

</LinearLayout>

    <ImageButton
        android:id="@+id/btnMail"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/botonMail"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnwhapok"
        app:layout_constraintStart_toEndOf="@id/btnTelefono"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/contactoemail" />

    <ImageButton
        android:id="@+id/btnwhapok"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:contentDescription="@string/botonWhap"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/idFondoContacto"
        app:layout_constraintStart_toEndOf="@id/btnMail"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@mipmap/whapok" />



    <ImageButton
        android:id="@+id/btnTelefono"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="-130dp"
        android:contentDescription="@mipmap/contactotel"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/idFondoContacto"
        app:layout_constraintTop_toTopOf="parent"
        android:background = "@mipmap/contactotel" />

<ImageView
    android:id="@+id/idLogoContact"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:background="@drawable/logodreamcir"
    app:layout_constraintBottom_toTopOf="@id/idFondoContacto"
    app:layout_constraintTop_toTopOf="@id/idFondoContacto"
    app:layout_constraintStart_toStartOf="@id/idFondoContacto"
    app:layout_constraintEnd_toEndOf="@id/idFondoContacto"
    android:contentDescription="@string/imageContat" />

</androidx.constraintlayout.widget.ConstraintLayout>